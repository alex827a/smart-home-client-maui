<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SmartHome2"
             xmlns:utils="clr-namespace:SmartHome2.Utils"
             xmlns:res="clr-namespace:SmartHome2.Resources.Strings"
             x:Class="SmartHome2.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <utils:BoolToOnOffConverter x:Key="BoolToOnOffConverter"/>
            <utils:BoolToRealtimeConverter x:Key="BoolToRealtimeConverter"/>
            <utils:BoolToModeConverter x:Key="BoolToModeConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
